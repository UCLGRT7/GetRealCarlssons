<Window x:Class="CarlssonsWPF.Dialogs.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Redigering af Ydelser" Height="350" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Window.Resources>

        <!-- Button -->
        <Style TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
        </Style>

        <!-- TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
        </Style>

        <!-- ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
        </Style>

        <!-- GroupBox med centreret header -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0 0 0 30"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding}" HorizontalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Add row -->
            <!-- Slet gruppe -->
            <RowDefinition Height="Auto"/> <!-- Delete row -->
            <!-- Luk -->
            <RowDefinition Height="Auto"/> <!-- Close row -->
        </Grid.RowDefinitions>

         <!-- Header -->
        <GroupBox Grid.Row="0" >  <GroupBox.Header> Tilf√∏j ny ydelse</GroupBox.Header>
            <Grid Margin="10">                     <!--Column1-->                   <!--Column2-->
                <Grid.ColumnDefinitions> <ColumnDefinition Width="260"/> <ColumnDefinition Width="Auto"/> </Grid.ColumnDefinitions>
                
         <!-- Add Service Row -->
                <TextBox x:Name="AddServiceInput" Grid.Column="0"/>
				<Button Content="Gem"
						Grid.Column="1"
						Click="AddService_Click"/>
            </Grid>
        </GroupBox>

        <!-- Spacer -->
        <Border Grid.Row="1" Height="50" Margin="0,0,0,73" />

    <!-- Delete Service Header -->
        <GroupBox Header="Slet eksisterende ydelse" Grid.Row="1" >
            <Grid Margin="10">
                <Grid.ColumnDefinitions> <ColumnDefinition Width="260"/> <ColumnDefinition Width="Auto"/> </Grid.ColumnDefinitions>
                
    <!-- Delete Service Row-->
                <ComboBox x:Name="ServiceComboBox" DisplayMemberPath="Name" Grid.Column="0"/> <Button Content="Slet" Grid.Column="1" Click="DeleteService_Click"/>
            </Grid>
        </GroupBox>

        <!-- Luk-knap -->
        <Button Content="Luk vindue"
                Width="100"
                Height="30"
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="Close_Click">
        </Button>
                
    </Grid>
</Window>
