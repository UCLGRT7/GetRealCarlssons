<Page x:Class="CarlssonsWPF.Views.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarlssonsWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="StartPage">


    <Grid Margin="10,10,10,10" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Content="Kunder" Click="customer_Click" VerticalAlignment="Top" HorizontalAlignment="Center"  Width="150" Height="50" Grid.Row="1" Margin="10"/>
            <Button Content="Projekter" Click="project_Click" VerticalAlignment="Center" HorizontalAlignment="Center"  Width="150" Height="50" Grid.Row="2" Margin="10"/>
            <Button Content="Reminder" Click="reminder_Click" VerticalAlignment="Top" HorizontalAlignment="Center" Width="150" Height="50" Grid.Row="3" Margin="10"/>

        </Grid>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Reminders14DaysExeededDatas}" AutoGenerateColumns="False" 
     Margin="0,10,0,10" CanUserAddRows="False" HorizontalAlignment="Stretch" GridLinesVisibility="None" CanUserResizeRows="False" CanUserResizeColumns="False" CanUserReorderColumns="False" HeadersVisibility="Column" AlternatingRowBackground="#FFF0F0F0" AlternationCount="2">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontSize" Value="18"/>
                    <!--<Setter Property="FontWeight" Value="Bold"/>-->
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="CaseNumber" Binding="{Binding CaseNumber}" Width="*" CanUserReorder="False" />
                <DataGridTextColumn Header="Name" Binding="{Binding CustomerName}" Width="*" />
                <DataGridTextColumn Header="Tilbud sendt" Binding="{Binding OfferSentDate}" Width="*" />
                <DataGridTextColumn Header="Dage" Binding="{Binding DaysPassed, StringFormat={}{0:D2}}" Width="*" />
                <DataGridTextColumn Header="Godkendt" Binding="{Binding OfferApproved}" Width="*" />
                <DataGridTextColumn Header="Betalt" Binding="{Binding IsPaymentRecieved}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
