<Page x:Class="CarlssonsWPF.Views.Projekt.ProjektMainWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     xmlns:local="clr-namespace:CarlssonsWPF.ViewModel"
     mc:Ignorable="d" 
     d:DesignHeight="720" d:DesignWidth="1280"
     Title="ProjektMainWindow">

    <Grid Margin="10" ShowGridLines="True">

        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            

            <TextBlock x:Name="Projekter" Grid.Row="0" Text="Projekter" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="Opret" Content="Opret" Click="createProject_Click" Width="150" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Grid.Column="1"/>
                <Button x:Name="Søg" Content="Søg" Click="projectSearch_Click" Width="150" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Grid.Column="2"/>

            </Grid>

            <Grid Grid.Row="2" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- DataGrid for Data -->
                <DataGrid Grid.Column="1" ItemsSource="{Binding CombinedProjects}" AutoGenerateColumns="False" 
                 Margin="0,10,0,10" CanUserAddRows="False" HorizontalAlignment="Center" GridLinesVisibility="None" CanUserResizeRows="False" CanUserResizeColumns="False" CanUserReorderColumns="False" HeadersVisibility="Column" AlternatingRowBackground="#F0F0F0F0" AlternationCount="1" CanUserSortColumns="False" Background="White" MinRowHeight="35" IsReadOnly="True">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontSize" Value="20"/>
                            <!--<Setter Property="Width" Value="Auto" />-->
                            <!--<Setter Property="FontWeight" Value="Bold"/>-->
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="CaseNumber" Binding="{Binding CaseNumber}" Width="150" FontSize="16" CanUserResize="True" />
                        <DataGridTextColumn Header="Name" Binding="{Binding CustomerName}" Width="250" FontSize="16" />
                        <DataGridTextColumn Header="Deadline" Binding="{Binding Deadline, StringFormat=\{0:d\}}" Width="125" FontSize="16" />
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="125" FontSize="16" />
                        <DataGridTextColumn Header="Godkendt" Binding="{Binding OfferConfirmed}" Width="125" FontSize="16" />
                        <DataGridTextColumn Header="Betalt" Binding="{Binding IsPaymentRecieved}" Width="100" FontSize="16" />
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>


            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="Reminders" Content="Reminders" Click="reminders_Click" Width="150" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Grid.Column="1" FontSize="20" FontWeight="Bold"/>
                <Button x:Name="Kunder" Content="Kunder" Click="customer_Click" Width="150" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Grid.Column="2" FontSize="20" FontWeight="Bold"/>

            </Grid>

            <Button x:Name="Start" Content="Start" Click="startPage_Click" Grid.Row="4" Width="150" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" FontSize="20"/>
        </Grid>
    </Grid>
</Page>
