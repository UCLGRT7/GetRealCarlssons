<Page x:Class="CarlssonsWPF.Views.Projekt.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarlssonsWPF.Helpers"
      xmlns:helpers="clr-namespace:CarlssonsWPF.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="CreateProjectView">

    <Page.Resources>
        <local:Max10EnableConverter x:Key="Max10EnableConverter" />
    </Page.Resources>

    <!-- Hovedlayout -->
    <Grid Margin="10" ShowGridLines="True">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Opret Projekt"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,10"
                   Grid.Row="0" />

        <!--Center Grid-->
        <Grid Grid.Row="1" ShowGridLines="True">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Left Grid-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Top grid in Left Grid-->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--Navn--> 
                    <TextBlock Text="Navn:"
                               Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="0,0,10,0"
                               FontSize="14"/>
                    <ComboBox Name="NavnFelt"
                              Grid.Row="0"
                              Grid.Column="1"
                              ItemsSource="{Binding Customers}"
                              SelectedItem="{Binding SelectedCustomer}" 
                              MinWidth="280"
                              Margin="0,5,0,5"/>

                    <!--Sagsnummer-->
                    <TextBlock Text="Sagsnummer:"
                              Grid.Row="1"
                              Grid.Column="0"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Right"
                              Margin="0,0,10,0"
                              FontSize="14"/>
                    <TextBox Name="SagsnummerFelt"
                             Text="{Binding CaseNumber}"
                             Grid.Row="1"
                             Grid.Column="1"
                             MinWidth="280"
                             Margin="0,5,0,5"/>
                    
                    <!--Projekt Adresse-->
                    <TextBlock Text="Projekt Adresse:"
                              Grid.Row="2"
                              Grid.Column="0"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Right"
                              Margin="0,0,10,0"
                              FontSize="14"/>
                    <TextBox Name="AdresseFelt"
                             Text="{Binding Address}"
                             Grid.Row="2"
                             Grid.Column="1"
                             MinWidth="280"
                             Margin="0,5,0,5"/>  
                    
                    <!--Deadline-->
                    <TextBlock Text="Deadline:"
                              Grid.Row="3"
                              Grid.Column="0"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Right"
                              Margin="0,0,10,0"
                              FontSize="14"/>
                    <TextBox Name="DeadlineFelt"
                            Text="{Binding DeadlineInput, UpdateSourceTrigger=PropertyChanged}"
                            PreviewTextInput="DateAutoFormatter"
                            Grid.Row="3"
                            Grid.Column="1"
                            MinWidth="280"
                            Margin="0,5,0,5"/>
                                       
                    <!--Postnummer-->
                    <TextBlock Text="Postnummer:"
                              Grid.Row="4"
                              Grid.Column="0"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Right"
                              Margin="0,0,10,0"
                              FontSize="14"/>
                    <TextBox Name="PostalcodeFelt"
                             Text="{Binding ProjectPostalCode, UpdateSourceTrigger=PropertyChanged}"
                             Grid.Row="4"
                             Grid.Column="1"
                             MinWidth="280"
                             Margin="0,5,0,5"/>
                                                           
                    <!--Omfang-->
                    <TextBlock Text="Omfang:"
                              Grid.Row="5"
                              Grid.Column="0"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Right"
                              Margin="0,0,10,0"
                              FontSize="14"/>
                    <TextBox Name="OmfangFelt"
                             Text="{Binding Scope}"
                             Grid.Row="5"
                             Grid.Column="1"
                             MinWidth="280"
                             Margin="0,5,0,5"/>
                </Grid>

                <!--Bottom grid in Left Grid-->
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Økonomi"
                               Grid.Row="0"
                               Grid.ColumnSpan="2"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <!--Tilbud afsendt-->
                    <TextBlock Text="Tilbud afsendt:"
                               Grid.Row="1"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="0,0,10,0"
                               FontSize="14"/>
                    <TextBox Name="TilbudAfsendtDato"
                             Text="{Binding OfferSentInput, UpdateSourceTrigger=PropertyChanged}"
                             Grid.Row="1"
                             Grid.Column="1"
                             MinWidth="280"
                             PreviewTextInput="DateAutoFormatter"
                             MaxLength="8"
                             Margin="0,5,0,5"/>

                    <!--Tilbud godkendt-->
                    <TextBlock Text="Tilbud godkendt:"
                               Grid.Row="2"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="0,0,10,0"
                               FontSize="14"/>
                    <TextBox Name="TilbudGodkendtDato"
                             Text="{Binding OfferApprovedInput, UpdateSourceTrigger=PropertyChanged}"
                             Grid.Row="2"
                             Grid.Column="1"
                             MinWidth="280"
                             PreviewTextInput="DateAutoFormatter"
                             MaxLength="8"
                             TextChanged="TilbudGodkendtDato_TextChanged"
                             Margin="0,5,0,5"/>

                    <!--Anslået pris-->
                    <TextBlock Text="Anslået pris:"
                               Grid.Row="3"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="0,0,10,0"
                               FontSize="14"/>
                    <TextBox Name="AnslaaetPrisFelt"
                             Text="{Binding EstimatedPrice}"
                             PreviewTextInput="DateAutoFormatter"
                             Grid.Row="3"
                             Grid.Column="1"
                             MinWidth="280"
                             Margin="0,5,0,5"/>

                    <!--Pris-->
                    <TextBlock Text="Pris:"
                               Grid.Row="4"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="0,0,10,0"
                               FontSize="14"/>
                    <TextBox Name="PrisFelt"
                             Text="{Binding Price}"
                             Grid.Row="4"
                             Grid.Column="1"
                             MinWidth="280"
                             Margin="0,5,0,5"/>

                    <!--Betalt-->
                    <TextBlock Text="Betalt:"
                               Grid.Row="5"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="0,0,10,0"
                               FontSize="14"/>
                    <TextBox Name="BetaltFelt"
                             Text="{Binding PaidInput, UpdateSourceTrigger=PropertyChanged}"
                             Grid.Row="5"
                             Grid.Column="1"
                             MinWidth="280"
                             PreviewTextInput="DateAutoFormatter"
                             MaxLength="8"
                             Margin="0,5,0,5"/>

                </Grid>

            </Grid>

            <!--Right Grid-->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!--              Navn                -->
                <TextBlock Text="Ydelser"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Height="16"
                           Width="Auto" />
                <TextBlock Text="Kompleksitet"
                            Grid.Column="2"
                            Grid.Row="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Height="16"
                            Width="75" />

                <!--       Sagsnummer       -->
                <ComboBox x:Name="YdelserCombo"
                 Grid.Row="1"
                 Grid.Column="0"
                 ItemsSource="{Binding Services}"
                 SelectedItem="{Binding SelectedServices}"
                          Height="16"
                 Margin="0,6,0,4" MinWidth="250" />
            </Grid>

        </Grid>

        
        <!--Bottom Grid (Buttons)-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Tilbage"
                    Command="{Binding CancelCommand}"
                    Width="150"
                    Height="50"
                    Margin="10"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>

            <Button Content="Opret"
                    Command="{Binding CreateProjectCommand}"
                    Width="150"
                    Height="50"
                    Margin="10"
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>

        </Grid>


    </Grid>

</Page>
    
