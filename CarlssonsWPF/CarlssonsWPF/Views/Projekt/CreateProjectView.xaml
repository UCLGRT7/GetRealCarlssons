<Page x:Class="CarlssonsWPF.Views.Projekt.CreateProjectView"
      x:Name="Root"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:helpers="clr-namespace:CarlssonsWPF.Helpers"
      xmlns:local="clr-namespace:CarlssonsWPF.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="CreateProjectView">

    <Page.Resources>
        <!--  Shared Box Styling -->
        <Style x:Key="BaseBoxStyle" TargetType="FrameworkElement">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="TextBoxCentered" TargetType="TextBox" BasedOn="{StaticResource BaseBoxStyle}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!--  Dato-formatering -->
        <Style x:Key="DateTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource BaseBoxStyle}">
            <EventSetter Event="PreviewTextInput" Handler="DateAutoFormatter"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="200"/>
        </Style>

        <!-- Button -->
        <Style x:Key="Button" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="15,0,15,0"/>
        </Style>

        <!--  ComboBoxEdit -->
        <Style x:Key="ComboBoxEdit" TargetType="ComboBox" BasedOn="{StaticResource BaseBoxStyle}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,0,2,0"/>
        </Style>

        <!--  ComboBoxView -->
        <Style x:Key="ComboBoxView" TargetType="TextBlock" BasedOn="{StaticResource BaseBoxStyle}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="200"/>
        </Style>

        <!--  TextBlockEdit -->
        <Style x:Key="TextBlockEdit" TargetType="TextBox" BasedOn="{StaticResource BaseBoxStyle}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="TextAlignment" Value="Left"/>
        </Style>

        <!--  TextBlockView -->
        <Style x:Key="TextBlockView" TargetType="TextBlock" BasedOn="{StaticResource BaseBoxStyle}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>


        <!--  Titles -->
        <Style x:Key="TitleToLeft" TargetType="TextBlock" BasedOn="{StaticResource BaseBoxStyle}">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Margin" Value="0,4,10,0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>

       
    </Page.Resources>
    <!-- Hovedlayout -->
    <Grid Margin="10,0,0,0">
        <ScrollViewer x:Name="Left" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,0,500,0">

            <Grid x:Name="LeftGrid" Margin="40" Height="540" Width="420">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <!-- Navn -->
                    <RowDefinition Height="30"/>
                    <!-- Sagsnummer -->
                    <RowDefinition Height="30"/>
                    <!-- Adresse -->
                    <RowDefinition Height="30"/>
                    <!-- Deadline -->
                    <RowDefinition Height="30"/>
                    <!-- Postnummer -->
                    <RowDefinition Height="30"/>
                    <!-- Omfang -->
                    <RowDefinition Height="30"/>
                    <!-- Spacer til Okonomi -->
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="15"/>

                    <!-- Okonomi header -->
                    <RowDefinition Height="30"/>
                    <!-- Tilbud Afsendt -->
                    <RowDefinition Height="30"/>
                    <!-- Tilbud Godkendt -->
                    <RowDefinition Height="30"/>
                    <!-- Estimaced Price -->
                    <RowDefinition Height="30"/>
                    <!-- Pris -->
                    <RowDefinition Height="30"/>
                    <!-- Betalt -->
                    <RowDefinition Height="25"/>
                    <!-- Knapper -->
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!--Navn-->
                <TextBlock Text="Navn:"
                               Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="0,0,10,0"
                               FontSize="14"/>
                <ComboBox Grid.Row="0" Grid.Column="1"
                                ItemsSource="{Binding Customers}"
                                SelectedItem="{Binding SelectedCustomer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                DisplayMemberPath="Name"
                                Style="{StaticResource ComboBoxEdit}" />

                <!--Sagsnummer-->
                <TextBlock Text="Sagsnummer:" Grid.Row="1" Grid.Column="0" Style="{StaticResource TitleToLeft}" />
                <TextBox Grid.Row="1" Grid.Column="1"
         Text="{Binding CaseNumber, UpdateSourceTrigger=PropertyChanged}"
         Style="{StaticResource TextBoxCentered}" />


                <!--Projekt Adresse-->
                <TextBlock Text="Projekt Adresse:" Grid.Row="2" Grid.Column="0" Style="{StaticResource TitleToLeft}" />
                <TextBox Grid.Row="2" Grid.Column="1"
         Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
         Style="{StaticResource TextBoxCentered}" />


                <!--Deadline-->
                <TextBlock Text="Deadline:" Grid.Row="3" Grid.Column="0" Style="{StaticResource TitleToLeft}" />
                <TextBox Grid.Row="3" Grid.Column="1"
         Text="{Binding DeadlineInput, UpdateSourceTrigger=PropertyChanged}"
         Style="{StaticResource DateTextBoxStyle}" />


                <!--Postnummer-->
                <TextBlock Text="Postnummer:" Grid.Row="4" Grid.Column="0" Style="{StaticResource TitleToLeft}" />
                       <TextBox Grid.Row="4" Grid.Column="1"
                          Text="{Binding ProjectPostalCode, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource TextBoxCentered}" />


                <!--Omfang-->
                <TextBlock Text="Omfang:" Grid.Row="5" Grid.Column="0" Style="{StaticResource TitleToLeft}" />
                <TextBox Grid.Row="5" Grid.Column="1"
         Text="{Binding Scope, UpdateSourceTrigger=PropertyChanged}"
         Style="{StaticResource TextBoxCentered}" />

                <TextBlock Text="Status:" Grid.Row="6" Grid.Column="0" Style="{StaticResource TitleToLeft}" />
                <ComboBox Grid.Row="6" Grid.Column="1"
          ItemsSource="{Binding StatusOptions}"
          SelectedItem="{Binding SelectedProject.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
          Style="{StaticResource ComboBoxEdit}" />

                <TextBlock Text="Tilbud afsendt:" Grid.Row="13" Grid.Column="0" Style="{StaticResource TitleToLeft}" />
                <TextBox Grid.Row="13" Grid.Column="1"
         Text="{Binding OfferSentInput, UpdateSourceTrigger=PropertyChanged}"
         Style="{StaticResource DateTextBoxStyle}" />

                <!-- Economy header -->
                <TextBlock Text="Okonomi" Grid.Row="12" Grid.Column="1" HorizontalAlignment="Left" FontWeight="Bold" Width="52" Margin="58,0,0,0" />

                <!-- Tilbud Afsendt -->
                <TextBlock Text="Tilbud afsendt:" Grid.Row="13" Grid.Column="0" Style="{StaticResource TitleToLeft}" />
                <TextBox Grid.Row="13" Grid.Column="1"
         Text="{Binding OfferSentInput, UpdateSourceTrigger=PropertyChanged}"
         Style="{StaticResource DateTextBoxStyle}" />

                <!-- Tilbud Godkendt -->
                <TextBlock Text="Tilbud godkendt:" Grid.Row="14" Grid.Column="0" Style="{StaticResource TitleToLeft}" />
                <TextBox Grid.Row="14" Grid.Column="1"
         Text="{Binding OfferApprovedInput, UpdateSourceTrigger=PropertyChanged}"
         Style="{StaticResource DateTextBoxStyle}" />

                <!-- Estimated Price -->
                <TextBlock Text="Anslaaet pris:" Grid.Row="15" Grid.Column="0" Style="{StaticResource TitleToLeft}" />
                <TextBox Grid.Row="15" Grid.Column="1"
         Text="{Binding EstimatedPrice, UpdateSourceTrigger=PropertyChanged}"
         Style="{StaticResource TextBoxCentered}" />

                <!-- Pris -->
                <TextBlock Text="Pris:" Grid.Row="16" Grid.Column="0" Style="{StaticResource TitleToLeft}" />
                <TextBox Grid.Row="16" Grid.Column="1"
         Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
         Style="{StaticResource TextBoxCentered}" />

                <!--Betalt -->
                <TextBlock Text="Betalt:" Grid.Row="17" Grid.Column="0" Style="{StaticResource TitleToLeft}" />
                <TextBox Grid.Row="17" Grid.Column="1"
         Text="{Binding PaidInput, UpdateSourceTrigger=PropertyChanged}"
         Style="{StaticResource DateTextBoxStyle}" />
            </Grid>
        </ScrollViewer>

        <!-- e side med Ydelser og Kompleksitet -->
        <ScrollViewer x:Name="Right" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Center" Margin="800,0,0,0" Width="400" Height="540">
            <Grid x:Name="RightGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <!-- Header -->
                    <RowDefinition Height="*"/>
                    <!-- ItemsControl -->
                    <RowDefinition Height="Auto"/>
                    <!-- Knapper -->
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <!-- Ydelser -->
                    <ColumnDefinition Width="0"/>
                    <!-- Spacer -->
                    <ColumnDefinition Width="75"/>
                    <!-- Kompleksitet -->
                </Grid.ColumnDefinitions>

                <!-- Header -->
                <TextBlock Text="Ydelser" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Height="22" />
                <TextBlock Text="Kompleksitet" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Height="22" Width="75" />

                <!-- Ydelser + Kompleksitet -->
                <ItemsControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" ItemsSource="{Binding SelectedServices}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox Grid.Column="0"
                          ItemsSource="{Binding DataContext.Services, RelativeSource={RelativeSource AncestorType=Page}}"
                          DisplayMemberPath="Name"
                          SelectedItem="{Binding Service, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Width="230"
                          Style="{StaticResource ComboBoxEdit}" />
                                <TextBox Grid.Column="2"
                         Text="{Binding Complexity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxCentered}"
                                         Width="30  "/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Knapper -->
            </Grid>
        </ScrollViewer>
        <StackPanel x:Name="Buttons" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,500,0,0" Height="50">
            <Button Content="Tilbage" Click="GoBack_Click" Style="{StaticResource Button}"/>
            <Button Content="Opret" Command="{Binding CreateProjectCommand}" Style="{StaticResource Button}"/>
        </StackPanel>
        <StackPanel x:Name="ServicesButton" Orientation="Horizontal" HorizontalAlignment="Center" Margin="650,250,0,0" Height="50" >
            <Button Command="{Binding AddServiceEntry} FontSize="12">
                <TextBlock TextAlignment="Center">
                   Tilfoej ydelse
                   <LineBreak/>
                   Til menu
                </TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Page>