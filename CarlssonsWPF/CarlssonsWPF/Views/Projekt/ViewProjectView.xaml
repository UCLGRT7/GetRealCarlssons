<Page x:Class="CarlssonsWPF.Views.Projekt.ViewProjectView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarlssonsWPF.Views.Projekt"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ViewProjectView">

    <Grid Margin="10">




        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid Margin="40"
          HorizontalAlignment="Center"
          VerticalAlignment="Center">

                <Grid.RowDefinitions>
                    <!-- Felter -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Ydelser -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Økonomi -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Knapper -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <!-- Navn -->
                <TextBlock x:Name="Navn" Text="Navn:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" HorizontalAlignment="Right" />
                <ComboBox x:Name="NavnFelt" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer}" />

                <!-- Sagsnummer -->
                <TextBlock x:Name="SagsNummer" Text="Sagsnummer:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,5,5" HorizontalAlignment="Right"/>
                <TextBox x:Name="SagsNummerFelt" Text="{Binding Project.CaseNumber}" Grid.Row="1" Grid.Column="1" TextAlignment="Left" Grid.ColumnSpan="2" Margin="0,5"/>

                <!-- Projekt Adresse -->
                <TextBlock x:Name="Adresse" Text="Projekt Adresse:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,5,5" HorizontalAlignment="Right"/>
                <TextBox x:Name="AdresseFelt" Text="{Binding Project.Address}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" TextAlignment="Left" Margin="0,5"/>

                <!-- Deadline -->
                <TextBlock x:Name="Deadline" Text="Deadline:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,5,5" HorizontalAlignment="Right"/>
                <TextBox x:Name="DeadlineFelt" Text="{Binding Project.Deadline}" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" TextAlignment="Left" Margin="0,5"/>

                <!-- Omfang -->
                <TextBlock x:Name="Omfang" Text="Omfang:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,5,5" HorizontalAlignment="Right"/>
                <TextBox x:Name="OmfangFelt" Text="{Binding Project.Scope}" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" TextAlignment="Left" Margin="0,5"/>

                <!-- Jeg kan ikke få Ydelser til at line ordentligt op efter timevis af arbejde - Det her er mit fix.. Pls ikke slet LOL -->
                <TextBlock x:Name="Lmao_spacer" Text="Ydelser:" Grid.Row="5" Grid.Column="1" FontWeight="Bold" Margin="116,10,116,10" HorizontalAlignment="Center" Opacity="0"/>

                <!-- Header -->
                <TextBlock x:Name="Ydelser" Text="Ydelser" Grid.Row="6" Grid.Column="1" FontWeight="Bold" Margin="0,0,0,22" Grid.RowSpan="2" HorizontalAlignment="Center" Width="40"/>
                <TextBlock x:Name="Kompleksitet" Text="Kompleksitet" Grid.Row="6" Grid.Column="2" FontWeight="Bold" HorizontalAlignment="Center"/>

                <!-- Ydelser 1–5 -->
                <TextBox x:Name="Y1" Text="{Binding Project.Services[0].Name}" Grid.Row="7" Grid.Column="1" Margin="0,2"/>
                <TextBox x:Name="Y1K" Text="{Binding Project.Services[0].Complexity}" Grid.Row="7" Grid.Column="2" Margin="10,2,0,2" TextAlignment="Center" VerticalContentAlignment="Center"/>

                <TextBox x:Name="Y2" Text="{Binding Project.Services[1].Name}" Grid.Row="8" Grid.Column="1" Margin="0,2"/>
                <TextBox x:Name="Y2K" Text="{Binding Project.Services[1].Complexity}" Grid.Row="8" Grid.Column="2" Margin="10,2,0,2" TextAlignment="Center" VerticalContentAlignment="Center"/>

                <TextBox x:Name="Y3" Text="{Binding Project.Services[2].Name}" Grid.Row="9" Grid.Column="1" Margin="0,2"/>
                <TextBox x:Name="Y3K" Text="{Binding Project.Services[2].Complexity}" Grid.Row="9" Grid.Column="2" Margin="10,2,0,2" TextAlignment="Center" VerticalContentAlignment="Center"/>

                <TextBox x:Name="Y4" Text="{Binding Project.Services[3].Name}" Grid.Row="10" Grid.Column="1" Margin="0,2"/>
                <TextBox x:Name="Y4K" Text="{Binding Project.Services[3].Complexity}" Grid.Row="10" Grid.Column="2" Margin="10,2,0,2" TextAlignment="Center" VerticalContentAlignment="Center"/>

                <TextBox x:Name="Y5" Text="{Binding Project.Services[4].Name}" Grid.Row="11" Grid.Column="1" Margin="0,2"/>
                <TextBox x:Name="Y5K" Text="{Binding Project.Services[4].Complexity}" Grid.Row="11" Grid.Column="2" Margin="10,2,0,2" TextAlignment="Center" VerticalContentAlignment="Center"/>

                <!-- Økonomi overskrift -->
                <TextBlock x:Name="Økonomi_HEADER_" Text="Økonomi" Grid.Row="12" Grid.Column="1" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,20,0,10" Width="52"/>

                <!-- Tilbud afsendt -->
                <TextBlock x:Name="TilbudAfsendt" Text="Tilbud afsendt:" Grid.Row="13" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                <TextBox x:Name="TilbudAfsendtDato" Text="{Binding Project.OfferSent}" Grid.Row="13" Grid.Column="1" Grid.ColumnSpan="2" TextAlignment="Left" Margin="0,2"/>

                <!-- Tilbud godkendt -->
                <TextBlock x:Name="TilbudGodkendt" Text="Tilbud godkendt:" Grid.Row="14" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                <TextBox x:Name="TilbudGodkendtDato" Text="{Binding Project.OfferApproved}" Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="2" TextAlignment="Left" Margin="0,2"/>

                <!-- Anslået pris -->
                <TextBlock x:Name="AnslaaetPris" Text="Anslået pris:" Grid.Row="15" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                <TextBox x:Name="AnslaaetPrisFelt" Text="{Binding Project.EstimatedPrice}" Grid.Row="15" Grid.Column="1" Grid.ColumnSpan="2" TextAlignment="Left" Margin="0,2"/>

                <!-- Pris -->
                <TextBlock x:Name="Pris" Text="Pris:" Grid.Row="16" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                <TextBox x:Name="PrisFelt" Text="{Binding Project.Price}" Grid.Row="16" Grid.Column="1" Grid.ColumnSpan="2" TextAlignment="Left" Margin="0,2"/>

                <!-- Betalt -->
                <TextBlock x:Name="Betalt" Text="Betalt:" Grid.Row="17" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" HorizontalAlignment="Right"/>
                <TextBox x:Name="BetaltFelt" Text="{Binding Project.Paid}" Grid.Row="17" Grid.Column="1" Grid.ColumnSpan="2" TextAlignment="Left" Margin="0,2"/>

                <!-- Knapper -->
                <StackPanel Grid.Row="17" Orientation="Horizontal" HorizontalAlignment="Left" Margin="23,71,0,-51" RenderTransformOrigin="0.502,2.001" Grid.Column="1">
                    <Button x:Name="Tilbage" Content="Tilbage" Command="{Binding CancelCommand}" Width="100" Margin="10,0"/>
                    <Button x:Name="Opret" Content="Opret" Command="{Binding CreateProjectCommand}" Width="100" Margin="10,0"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

    </Grid>
</Page>
