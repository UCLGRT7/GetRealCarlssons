<Page x:Class="CarlssonsWPF.Views.Projekt.ViewProjectView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CarlssonsWPF.Views.Projekt"
      xmlns:helpers="clr-namespace:CarlssonsWPF.Helpers"
      mc:Ignorable="d"
      d:DesignHeight="720"
      d:DesignWidth="1280"
      Title="ViewProjectView">

    <Page.Resources>
        <!--  Shared Box Styling -->
        <Style x:Key="BaseBoxStyle" TargetType="FrameworkElement">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="TextBoxCentered" TargetType="TextBox" BasedOn="{StaticResource BaseBoxStyle}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!--  Dato-formatering -->
        <Style x:Key="DateTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource BaseBoxStyle}">
            <EventSetter Event="PreviewTextInput" Handler="DateAutoFormatter"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="200"/>
        </Style>

        <!-- Button -->
        <Style x:Key="Button" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="15,0,15,0"/>
        </Style>

        <!--  ComboBoxEdit -->
        <Style x:Key="ComboBoxEdit" TargetType="ComboBox" BasedOn="{StaticResource BaseBoxStyle}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,0,2,0"/>
        </Style>

        <!--  ComboBoxView -->
        <Style x:Key="ComboBoxView" TargetType="TextBlock" BasedOn="{StaticResource BaseBoxStyle}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="200"/>
        </Style>

        <!--  TextBlockEdit -->
        <Style x:Key="TextBlockEdit" TargetType="TextBox" BasedOn="{StaticResource BaseBoxStyle}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="TextAlignment" Value="Left"/>
        </Style>

        <!--  TextBlockView -->
        <Style x:Key="TextBlockView" TargetType="TextBlock" BasedOn="{StaticResource BaseBoxStyle}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>


        <!--  Titles -->
        <Style x:Key="TitleToLeft" TargetType="TextBlock" BasedOn="{StaticResource BaseBoxStyle}">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Margin" Value="0,4,10,0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
    </Page.Resources>





    <Grid Margin="10,0,0,0">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,0,500,0">

            <Grid x:Name="LeftGrid" Margin="40" Height="540" Width="420">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <!-- Navn -->
                    <RowDefinition Height="30"/>
                    <!-- Sagsnummer -->
                    <RowDefinition Height="30"/>
                    <!-- Adresse -->
                    <RowDefinition Height="30"/>
                    <!-- Deadline -->
                    <RowDefinition Height="30"/>
                    <!-- Postnummer -->
                    <RowDefinition Height="30"/>
                    <!-- Omfang -->
                    <RowDefinition Height="30"/>
                    <!-- Spacer til Økonomi -->
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="15"/>

                    <!-- Økonomi header -->
                    <RowDefinition Height="30"/>
                    <!-- Tilbud Afsendt -->
                    <RowDefinition Height="30"/>
                    <!-- Tilbud Godkendt -->
                    <RowDefinition Height="30"/>
                    <!-- Anslået pris -->
                    <RowDefinition Height="30"/>
                    <!-- Pris -->
                    <RowDefinition Height="30"/>
                    <!-- Betalt -->
                    <RowDefinition Height="25"/>
                    <!-- Knapper -->
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>


                <!-- Navn -->
                <TextBlock Text="Navn:" Grid.Row="0" Grid.Column="0" Style="{StaticResource TitleToLeft}" Margin="0,9,10,0"/>
                <ContentControl Grid.Row="0" Grid.Column="1" Content="{Binding SelectedProject}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding DataContext.Customers, RelativeSource={RelativeSource AncestorType=Page}}"
                           SelectedItem="{Binding Customer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                           DisplayMemberPath="Name"
                            Style="{StaticResource ComboBoxEdit}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding CustomerName}"
                                                           Margin="6,9,0,0"
                                                           Style="{StaticResource BaseBoxStyle}">
                                                </TextBlock>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <!-- Sagsnummer -->
                <TextBlock Text="Sagsnummer:" Grid.Row="1" Grid.Column="0" Style="{StaticResource TitleToLeft}"/>
                <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding SelectedProject}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBox Text="{Binding CaseNumber, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource TextBoxCentered}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding CaseNumber}"
                                                           Style="{StaticResource TextBlockView}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <!-- Adresse -->
                <TextBlock Text="Projekt Adresse:" Grid.Row="2" Grid.Column="0" Style="{StaticResource TitleToLeft}"/>
                <ContentControl Grid.Row="2" Grid.Column="1" Content="{Binding SelectedProject}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBox Text="{Binding ProjectAddress, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource TextBoxCentered}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ProjectAddress}"
                                                           Style="{StaticResource TextBlockView}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <!-- Deadline -->
                <TextBlock Text="Deadline:" Grid.Row="3" Grid.Column="0" Style="{StaticResource TitleToLeft}"/>
                <ContentControl Grid.Row="3" Grid.Column="1" Content="{Binding SelectedProject}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBox Text="{Binding DeadlineInput, UpdateSourceTrigger=PropertyChanged}" 
                                                         Style="{StaticResource DateTextBoxStyle}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Deadline, StringFormat='dd/MM/yy'}"
                                                           Style="{StaticResource TextBlockView}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <!-- Postnummer -->
                <TextBlock Text="Postnummer:" Grid.Row="4" Grid.Column="0" Style="{StaticResource TitleToLeft}"/>
                <ContentControl Grid.Row="4" Grid.Column="1" Content="{Binding SelectedProject}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBox Text="{Binding ProjectPostalCode, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource TextBoxCentered}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ProjectPostalCode}"
                                                           Style="{StaticResource TextBlockView}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <!-- Omfang -->
                <TextBlock Text="Omfang:" Grid.Row="5" Grid.Column="0" Style="{StaticResource TitleToLeft}"/>
                <ContentControl Grid.Row="5" Grid.Column="1" Content="{Binding SelectedProject}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Scope, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource TextBoxCentered}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Scope}"
                                                           Style="{StaticResource TextBlockView}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <!-- Label -->
                <TextBlock Text="Status:" Grid.Row="6" Grid.Column="0" Style="{StaticResource TitleToLeft}" />
                <!-- Content -->
                <ContentControl Grid.Row="6" Grid.Column="1" Content="{Binding SelectedProject}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding DataContext.StatusOptions, RelativeSource={RelativeSource AncestorType=Page}}"
                                          SelectedItem="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource ComboBoxEdit}" />
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Status}" Style="{StaticResource TextBlockView}" />
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>


                <!-- Økonomi header -->
                <TextBlock Text="Økonomi" Grid.Row="12" Grid.Column="1" HorizontalAlignment="Center" FontWeight="Bold" Width="52" />

                <!-- Tilbud afsendt -->
                <TextBlock Text="Tilbud afsendt:" Grid.Row="13" Grid.Column="0" Style="{StaticResource TitleToLeft}"/>
                <ContentControl Grid.Row="13" Grid.Column="1" Content="{Binding SelectedProject}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBox Text="{Binding OfferSentInput, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource DateTextBoxStyle}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding OfferSent, StringFormat='dd/MM/yy'}"
                                                           Style="{StaticResource TextBlockView}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <!-- Tilbud godkendt -->
                <TextBlock Text="Tilbud godkendt:" Grid.Row="14" Grid.Column="0" Style="{StaticResource TitleToLeft}"/>
                <ContentControl Grid.Row="14" Grid.Column="1" Content="{Binding SelectedProject}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBox Text="{Binding OfferApprovedInput, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource DateTextBoxStyle}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding OfferApproved, StringFormat='dd/MM/yy'}"
                                                           Style="{StaticResource TextBlockView}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <!-- Anslået pris -->
                <TextBlock Text="Anslået pris:" Grid.Row="15" Grid.Column="0" Style="{StaticResource TitleToLeft}"/>
                <ContentControl Grid.Row="15" Grid.Column="1" Content="{Binding SelectedProject}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding EstimatedPrice, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource BaseBoxStyle}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding EstimatedPrice, StringFormat='{}{0:N0} kr'}"
                                                           Style="{StaticResource TextBlockView}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <!-- Pris -->
                <TextBlock Text="Pris:" Grid.Row="16" Grid.Column="0" Style="{StaticResource TitleToLeft}"/>
                <ContentControl Grid.Row="16" Grid.Column="1" Content="{Binding SelectedProject}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource TextBoxCentered}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Price, StringFormat='{}{0:N0} kr'}"
                                                           Style="{StaticResource TextBlockView}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <!-- Betalt -->
                <TextBlock Text="Betalt:" Grid.Row="17" Grid.Column="0" Style="{StaticResource TitleToLeft}"/>
                <ContentControl Grid.Row="17" Grid.Column="1" Content="{Binding SelectedProject}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBox Text="{Binding PaidInput, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource DateTextBoxStyle}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Paid, StringFormat='dd/MM/yy'}"
                                                           Style="{StaticResource TextBlockView}"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </Grid>
        </ScrollViewer>


        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,50">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Text" Value="" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="FontSize" Value="25" />
                    <Setter Property="TextDecorations" Value="Underline" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsEditing}" Value="True">
                            <Setter Property="Text" Value="Redigerer" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>



        <!-- Højre side med Ydelser og Kompleksitet -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Center" Margin="800,0,0,0" Width="400" Height="540">
            <Grid x:Name="RightGrid">
                <Grid.RowDefinitions>
                    <!-- Header -->
                    <RowDefinition Height="30"/>
                    <!-- Ydelser og Kompleksitet -->
                    <RowDefinition Height="350"/>
                    <!-- Bunden -->
                    <RowDefinition Height="100"/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <!-- Ydelser -->
                    <ColumnDefinition Width="0"/>
                    <!-- Spacer -->
                    <ColumnDefinition Width="75"/>
                    <!-- Kompleksitet -->
                </Grid.ColumnDefinitions>

                <!-- Header: Ydelser og Kompleksitet -->
                <TextBlock Text="Ydelser" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Height="22" />
                <TextBlock Text="Kompleksitet" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Height="22" Width="75" />

                <ItemsControl ItemsSource="{Binding SelectedProject.Services}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>

                                <!-- Ydelse -->
                                <ContentControl Content="{Binding}" Grid.Column="0" >
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.IsEditing, RelativeSource={RelativeSource AncestorType=Page}}" Value="True">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <ComboBox
                                                                          ItemsSource="{Binding DataContext.Services, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                          DisplayMemberPath="Name"
                                                                          SelectedValuePath="Id"
                                                                          SelectedValue="{Binding Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                          Width="230"
                                                                          Style="{StaticResource ComboBoxEdit}" />
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DataContext.IsEditing, RelativeSource={RelativeSource AncestorType=Page}}" Value="False">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <TextBlock
                                                                             Text="{Binding Service.Name}"
                                                                             Style="{StaticResource TextBlockView}"
/>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>

                                <!-- Kompleksitet -->
                                <ContentControl Content="{Binding}" Grid.Column="2" HorizontalAlignment="Left">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.IsEditing, RelativeSource={RelativeSource AncestorType=Page}}" Value="True">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <TextBox Text="{Binding Complexity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource TextBoxCentered}" />
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DataContext.IsEditing, RelativeSource={RelativeSource AncestorType=Page}}" Value="False">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding Complexity}" Width="50" Height="26"
                                           Style="{StaticResource TextBlockView}" />
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>

                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>




        <!-- Knapper -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,500,0,0" Width="350" Height="50" VerticalAlignment="Center">
            <Button Content="Tilbage"
                    Click="GoBack_Click"
                    Style="{StaticResource Button}"/>


            <Button Content="{Binding EditButtonText}"
                    Command="{Binding ToggleEditCommand}"
                    Style="{StaticResource Button}"/>
        </StackPanel>
    </Grid>
</Page>

    
    