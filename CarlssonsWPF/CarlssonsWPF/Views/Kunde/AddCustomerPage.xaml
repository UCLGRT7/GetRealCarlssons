<Page x:Class="CarlssonsWPF.Views.Kunde.AddCustomerPage"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     xmlns:local="clr-namespace:CarlssonsWPF.Views.Kunde"
     mc:Ignorable="d" 
     d:DesignHeight="720" d:DesignWidth="1280"
     Title="AddCustomerPage">

   <Grid Margin="10">

       <Grid.RowDefinitions>
           <RowDefinition Height="Auto"/>
           <RowDefinition Height="*"/>
           <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Tilføj kunde" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10" Grid.Row="0"/>

       <Grid Grid.Row="1">
           <Grid.ColumnDefinitions>
               <ColumnDefinition Width="*"/>
               <ColumnDefinition Width="*"/>
           </Grid.ColumnDefinitions>


           <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Navn:" FontSize="16" Margin="0,50,5,0" TextAlignment="Right" Grid.Row="0"/>
                <TextBlock Text="Adresse:" FontSize="16" Margin="0,50,5,0" TextAlignment="Right" Grid.Row="1"/>
                <TextBlock Text="Postnummer:" FontSize="16" Margin="0,50,5,0" TextAlignment="Right" Grid.Row="2"/>
                <TextBlock Text="By:" FontSize="16" Margin="0,50,5,0" TextAlignment="Right" Grid.Row="3"/>
                <TextBlock Text="Tlf Nummer:" FontSize="16" Margin="0,50,5,0" TextAlignment="Right" Grid.Row="4"/>
                <TextBlock Text="E-Mail:" FontSize="16" Margin="0,50,5,0" TextAlignment="Right" Grid.Row="5"/>
           </Grid>

           <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox Name="NameTextBox" Text="{Binding Name}" Padding="0,-3,0,0" FontSize="16" Margin="0,50,0,0" TextAlignment="Left" Width="300" Height="21.28" Grid.Row="0" HorizontalAlignment="Left" />
                <TextBox Name="AddressTextBox" Text="{Binding Address}" Padding="0,-3,0,0" FontSize="16" Margin="0,50,0,0" TextAlignment="Left" Width="300" Height="21.28" Grid.Row="1" HorizontalAlignment="Left" />
                <TextBox Name="PostalCodeTextBox" Text="{Binding PostalCode}" Padding="0,-3,0,0" FontSize="16" Margin="0,50,0,0" TextAlignment="Left" Width="300" Height="21.28" Grid.Row="2" HorizontalAlignment="Left" />
                <TextBox Name="CityTextBox" Text="{Binding City}" Padding="0,-3,0,0" FontSize="16" Margin="0,50,0,0" TextAlignment="Left" Width="300" Height="21.28" Grid.Row="3" HorizontalAlignment="Left" />
                <TextBox Name="PhoneNumberTextBox" Text="{Binding PhoneNumber}" Padding="0,-3,0,0" FontSize="16" Margin="0,50,0,0" TextAlignment="Left" Width="300" Height="21.28" Grid.Row="4" HorizontalAlignment="Left" />
                <TextBox Name="EmailTextBox" Text="{Binding Email}" Padding="0,-3,0,0" FontSize="16" Margin="0,50,0,0" TextAlignment="Left" Width="300" Height="21.28" Grid.Row="5" HorizontalAlignment="Left" />
           </Grid>
       </Grid>

       <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Tilbage" Width="150" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Click="BackFromAddCustomer_Click" Grid.Column="1"/>
            <Button Content="Opret" Width="150" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Click="AddCustomerAndGoToSpec_click" Grid.Column=" 2"/>
       </Grid>

   </Grid>
</Page>
