<Page x:Class="CarlssonsWPF.Views.Kunde.AddCustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarlssonsWPF.Views.Kunde"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="AddCustomerPage">

    <Grid Background="#f0f0f0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="58*"/>

        </Grid.RowDefinitions>

        <TextBlock Text="Tilføj kunde" FontSize="24" HorizontalAlignment="Left" Margin="578,10,0,10" Grid.ColumnSpan="2" Width="124"/>


        <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,1,0,102" >
            <TextBlock Text="Navn:" FontSize="16" Margin="0,50,5,0" TextAlignment="Right"/>
            <TextBlock Text="Adresse:" FontSize="16" Margin="0,50,5,0" TextAlignment="Right"/>
            <TextBlock Text="Postnummer:" FontSize="16" Margin="0,50,5,0" TextAlignment="Right"/>
            <TextBlock Text="By:" FontSize="16" Margin="0,50,5,0" TextAlignment="Right"/>
            <TextBlock Text="Tlf Nummer:" FontSize="16" Margin="0,50,5,0" TextAlignment="Right"/>
            <TextBlock Text="E-Mail:" FontSize="16" Margin="0,50,5,0" TextAlignment="Right"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,102" >
            <TextBox Name="NameTextBox" Text="{Binding Name}" Padding="0,-3,0,0" FontSize="16" Margin="0,50,0,0" TextAlignment="Left" Width="300" Height="21.28" />
            <TextBox Name="AddressTextBox" Text="{Binding Address}" Padding="0,-3,0,0" FontSize="16" Margin="0,50,0,0" TextAlignment="Left" Width="300" Height="21.28" />
            <TextBox Name="PostalCodeTextBox" Text="{Binding PostalCode}" Padding="0,-3,0,0" FontSize="16" Margin="0,50,0,0" TextAlignment="Left" Width="300" Height="21.28" />
            <TextBox Name="CityTextBox" Text="{Binding City}" Padding="0,-3,0,0" FontSize="16" Margin="0,50,0,0" TextAlignment="Left" Width="300" Height="21.28" />
            <TextBox Name="PhoneNumberTextBox" Text="{Binding PhoneNumber}" Padding="0,-3,0,0" FontSize="16" Margin="0,50,0,0" TextAlignment="Left" Width="300" Height="21.28" />
            <TextBox Name="EmailTextBox" Text="{Binding Email}" Padding="0,-3,0,0" FontSize="16" Margin="0,50,0,0" TextAlignment="Left" Width="300" Height="21.28" />

        </StackPanel>




        <UniformGrid Grid.Row="2" Columns="2" Margin="10,10,10,0" Height="50" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <Button Content="Tilbage" Width="120" Height="50" HorizontalAlignment="Right" Margin="0 0 5 0" Click="BackFromAddCustomer_Click"/>
            <Button Content="Opret" Width="120" Height="50" HorizontalAlignment="left" Margin="5 0 0 0" Click="AddCustomerAndGoToSpec_click"/>
        </UniformGrid>

        



    </Grid>
</Page>
