<Page x:Class="CarlssonsWPF.Views.Kunde.KundeSearch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarlssonsWPF.Views.Kunde"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="KundeMainWindow">

    <Grid Background="#f0f0f0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="58*"/>

        </Grid.RowDefinitions>

        <TextBlock Text="Kunder" FontSize="24" HorizontalAlignment="Center" Margin="0,10"/>

        <UniformGrid Grid.Row="2" Columns="2" Margin="10" Height="50" VerticalAlignment="Top">
            <Button Content="Søg" Click="SearchResults_Click" Width="120" Height="50" HorizontalAlignment="Right" Margin="0 0 5 0" />
            <Button Content="Tilbage" Click="KundeMainWindow_Click" Width="120" Height="50" HorizontalAlignment="left" Margin="5 0 0 0" />

        </UniformGrid>

        <UniformGrid Grid.Row="2" Columns="1" Margin="5" Height="50" VerticalAlignment="Bottom"/>


            <Rectangle HorizontalAlignment="Center" Height="310" Margin="0,60,0,0" Grid.Row="1" Fill="LightGoldenrodYellow" Opacity="0.8" VerticalAlignment="Top" Width="500"/>

            <!--Navn-->
            <TextBlock HorizontalAlignment="Left" Margin="450,100,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Navn" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="580,100,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <!--Adresse-->
            <TextBlock HorizontalAlignment="Left" Margin="450,140,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Adresse" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="580,140,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <!--Postnummer-->
            <TextBlock HorizontalAlignment="Left" Margin="450,180,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Postnummer" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="580,180,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <!--By-->
            <TextBlock HorizontalAlignment="Left" Margin="450,220,0,0" Grid.Row="1" TextWrapping="Wrap" Text="By" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="580,220,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <!--Tlfnummer-->
            <TextBlock HorizontalAlignment="Left" Margin="450,260,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Telefonnummer" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="580,260,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <!--E-mail-->
            <TextBlock HorizontalAlignment="Left" Margin="450,300,0,0" Grid.Row="1" TextWrapping="Wrap" Text="E-mail" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="580,300,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        
    </Grid>
</Page>
