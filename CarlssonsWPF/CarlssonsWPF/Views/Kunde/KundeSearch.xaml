<Page x:Class="CarlssonsWPF.Views.Kunde.KundeSearch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarlssonsWPF.Views.Kunde"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="KundeMainWindow">

    <Grid Margin="10" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Kunder" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10" Grid.Row="0"/>


        <Grid Grid.Row="1" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*" MinHeight="310"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" MinWidth="500"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Rectangle HorizontalAlignment="Center" Height="310" Fill="LightGoldenrodYellow" Opacity="0.8" VerticalAlignment="Center" Width="500" Grid.Row="1" Grid.Column="1"/>
            <Grid ShowGridLines="True" Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Navn-->
            <TextBlock HorizontalAlignment="Center" Grid.Row="0" Text="Navn" VerticalAlignment="Center"/>
            <TextBox x:Name="Navn" HorizontalAlignment="Left" Margin="580,100,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <!--Adresse-->
            <TextBlock HorizontalAlignment="Left" Margin="450,140,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Adresse" VerticalAlignment="Top"/>
            <TextBox x:Name="Adresse" HorizontalAlignment="Left" Margin="580,140,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <!--Postnummer-->
            <TextBlock HorizontalAlignment="Left" Margin="450,180,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Postnummer" VerticalAlignment="Top"/>
            <TextBox x:Name="Postnummer" HorizontalAlignment="Left" Margin="580,180,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <!--By-->
            <TextBlock HorizontalAlignment="Left" Margin="450,220,0,0" Grid.Row="1" TextWrapping="Wrap" Text="By" VerticalAlignment="Top"/>
            <TextBox x:Name="By" HorizontalAlignment="Left" Margin="580,220,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <!--Tlfnummer-->
            <TextBlock HorizontalAlignment="Left" Margin="450,260,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Telefonnummer" VerticalAlignment="Top"/>
            <TextBox x:Name="Tlfnummer" HorizontalAlignment="Left" Margin="580,260,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            <!--E-mail-->
            <TextBlock HorizontalAlignment="Left" Margin="450,300,0,0" Grid.Row="1" TextWrapping="Wrap" Text="E-mail" VerticalAlignment="Top"/>
            <TextBox x:Name="Email" HorizontalAlignment="Left" Margin="580,300,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Button Content="Søg" Click="KundeSearch_Click" Width="120" Height="50" HorizontalAlignment="Right" Margin="0 0 5 0" />
            <Button Content="Tilbage" Click="KundeMainWindow_Click" Width="120" Height="50" HorizontalAlignment="left" Margin="5 0 0 0" />

        </Grid>
    </Grid>
</Page>
