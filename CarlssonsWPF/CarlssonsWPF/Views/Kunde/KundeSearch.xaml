<Page x:Class="CarlssonsWPF.Views.Kunde.KundeSearch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarlssonsWPF.Views.Kunde"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="KundeMainWindow">

    <Grid Margin="10" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Kunder" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10" Grid.Row="0"/>


        <Grid Grid.Row="1" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*" MinHeight="310"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" MinWidth="500"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Rectangle HorizontalAlignment="Center" Height="310" Fill="LightGoldenrodYellow" Opacity="0.8" VerticalAlignment="Center" Width="500" Grid.Row="1" Grid.Column="1"/>
            <Grid ShowGridLines="False" Grid.Row="1" Grid.Column="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Navn-->
                <TextBlock HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Text="Navn" VerticalAlignment="Center" Margin="0,12.5,0,12.5"/>
                <TextBox x:Name="Navn" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="3" TextWrapping="Wrap" VerticalAlignment="Center" Width="250"/>
            <!--Adresse-->
                <TextBlock Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Text="Adresse" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,12.5,0,12.5"/>
                <TextBox x:Name="Adresse" Grid.Row="2" Grid.Column="3" TextWrapping="Wrap" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <!--Postnummer-->
                <TextBlock HorizontalAlignment="Left" Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" Text="Postnummer" VerticalAlignment="Center" Margin="0,12.5,0,12.5"/>
                <TextBox x:Name="Postnummer" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="3" TextWrapping="Wrap" VerticalAlignment="Center" Width="250"/>
            <!--By-->
                <TextBlock HorizontalAlignment="Left" Grid.Row="4" Grid.Column="1" TextWrapping="Wrap" Text="By" VerticalAlignment="Center" Margin="0,12.5,0,12.5"/>
                <TextBox x:Name="By" HorizontalAlignment="Center" Grid.Row="4" Grid.Column="3" TextWrapping="Wrap" VerticalAlignment="Center" Width="250"/>
            <!--Tlfnummer-->
                <TextBlock HorizontalAlignment="Left" Grid.Row="5" Grid.Column="1" TextWrapping="Wrap" Text="Telefonnummer" VerticalAlignment="Center" Margin="0,12.5,0,12.5"/>
                <TextBox x:Name="Tlfnummer" HorizontalAlignment="Center" Grid.Row="5" Grid.Column="3" TextWrapping="Wrap" VerticalAlignment="Center" Width="250"/>
            <!--E-mail-->
                <TextBlock HorizontalAlignment="Left" Grid.Row="6" Grid.Column="1" TextWrapping="Wrap" Text="E-mail" VerticalAlignment="Center" Margin="0,12.5,0,12.5"/>
                <TextBox x:Name="Email" HorizontalAlignment="Center" Grid.Row="6" Grid.Column="3" TextWrapping="Wrap" VerticalAlignment="Center" Width="250"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Søg" Click="KundeSearch_Click" Width="150" Height="50" HorizontalAlignment="Center" Margin="10" Grid.Column="1" VerticalAlignment="Center" />
            <Button Content="Tilbage" Click="KundeMainWindow_Click" Width="150" Height="50" HorizontalAlignment="Center" Margin="10" Grid.Column="2" VerticalAlignment="Center" />

        </Grid>
    </Grid>
</Page>
