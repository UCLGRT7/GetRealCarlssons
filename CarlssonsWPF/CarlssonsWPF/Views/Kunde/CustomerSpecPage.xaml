<Page x:Class="CarlssonsWPF.Views.Kunde.CustomerSpecPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarlssonsWPF.Views.Kunde"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="CustomerSpecPage">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Kunde Spec" FontSize="24" FontWeight="Bold" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,10"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>



            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Navn:" FontSize="16"  TextAlignment="Right" Grid.Row="1"/>
                <TextBlock Text="Adresse:" FontSize="16"  TextAlignment="Right" Grid.Row="2"/>
                <TextBlock Text="Postnummer:" FontSize="16"  TextAlignment="Right" Grid.Row="3"/>
                <TextBlock Text="By:" FontSize="16"  TextAlignment="Right" Grid.Row="4"/>
                <TextBlock Text="Tlf Nummer:" FontSize="16"  TextAlignment="Right" Grid.Row="5"/>
                <TextBlock Text="E-Mail:" FontSize="16"  TextAlignment="Right" Grid.Row="6"/>
        </Grid>

        <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBox Name="NameTextBox" Text="{Binding Name}" FontSize="16" TextAlignment="Left" Width="300" Height="21.28" Grid.Row="1"/>
                <TextBox Name="AddressTextBox" Text="{Binding Address}" FontSize="16" TextAlignment="Left" Width="300" Height="21.28" Grid.Row="2"/>
                <TextBox Name="PostalCodeTextBox" Text="{Binding PostalCode}" FontSize="16" TextAlignment="Left" Width="300" Height="21.28" Grid.Row="3"/>
                <TextBox Name="CityTextBox" Text="{Binding City}" FontSize="16" TextAlignment="Left" Width="300" Height="21.28" Grid.Row="4"/>
                <TextBox Name="PhoneNumberTextBox" Text="{Binding PhoneNumber}" FontSize="16" TextAlignment="Left" Width="300" Height="21.28" Grid.Row="5"/>
                <TextBox Name="EmailTextBox" Text="{Binding Email}" FontSize="16" TextAlignment="Left" Width="300" Height="21.28" Grid.Row="6"/>

        </Grid>
        </Grid>
        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <TextBlock Text="Projekter" FontSize="24" HorizontalAlignment="Center" />

            <DataGrid
                Margin="0,40 0 0"
                AutoGenerateColumns="True"
                ItemsSource="{Binding Projects}"
                
            />

        </Grid>




        <UniformGrid Grid.Row="3" Columns="2" Margin="10,10,10,0" Height="50" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <Button Content="Tilbage" Width="120" Height="50" HorizontalAlignment="Right" Margin="0 0 5 0" Click="BackFromCustomerSpec_click"/>
            <Button Content="Gem" Width="120" Height="50" HorizontalAlignment="left" Margin="5 0 0 0" Command="{Binding UpdateCustomerCommand}"/>
        </UniformGrid>





    </Grid>
</Page>
