<Page x:Class="CarlssonsWPF.Views.Kunde.KundeMainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarlssonsWPF.Views.Kunde"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="KundeMainWindow">

    <Grid Background="#f0f0f0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="58*"/>

        </Grid.RowDefinitions>

        <TextBlock Text="Kunder" FontSize="24" HorizontalAlignment="Center" Margin="0,10"/>

        <DataGrid Grid.Row="1"
      Name="CustomerDataGrid"
      Margin="10"
      VerticalAlignment="Stretch"
                  ItemsSource="{Binding customers}"
                    AutoGenerateColumns="true"
                  MouseDoubleClick="CustomerDataGrid_MouseDoubleClick"
                
     />


        <UniformGrid Grid.Row="2" Columns="2" Margin="10" Height="50" VerticalAlignment="Top">
            <Button Content="Opret" Width="120" Height="50" HorizontalAlignment="Right" Margin="0 0 5 0" Click="AddCustomerButton_Click" />
            <Button Content="Søg" Width="120" Height="50" HorizontalAlignment="left" Margin="5 0 0 0" />



        </UniformGrid>

        <UniformGrid Grid.Row="2" Columns="1" Margin="5" Height="50" VerticalAlignment="Bottom">
            <Button Content="Start" Width="120" Height="50" HorizontalAlignment="Stretch" Click="HomescreenButton_Click" />



        </UniformGrid>



    </Grid>
</Page>
